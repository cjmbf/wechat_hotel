<!--pages/xgma/xgma.wxml-->

<form bindsubmit='formSubmit' class='container'>
<view class='old'>
  <text>原密码</text>
  <input  placeholder-class="phcolor" password='true' name='oldpwd' placeholder='请输入原密码' />
</view>
<view class='new'>
  <text>新密码</text>
  <input  placeholder-class="phcolor" password='true' name='newpwd' placeholder='请输入新密码' />
</view>
<view class='ok'>
  <text>确认新密码</text>
  <input  placeholder-class="phcolor" password='true' name='newpwd2' placeholder='请确认一遍新密码' />
</view>
<button type='primary' form-type='submit'>提交</button>

</form>