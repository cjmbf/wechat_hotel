/**index.wxss**/

.info{
  margin-top: 10px;
  display: flex;
}
.quanbu{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;  
  margin-top: 10px;
  color: #fff;
  padding: 6px;
  margin-left: -10px;
  background-color: #82bef7;
}
.infos view{
  display: block;
  margin-bottom: 5px;
}

.info image{
  width: 30vw;
  height: 20vh;
  border-radius: 5px;
}
.infos{
  margin-left: 15px;
  margin-top: 15px;
}
.intro{
  color: #000;
  
  font-size: 15px;
}
.address{
  margin-top: 5vw;
}
.address,.detail{
  color: #999;
  font-size: 13px;
}
.price{
  position: relative;
  left: 30vw;
  top:-12vw;
  font-size:12px;
  padding: 5px;
  background:#fcb51cbb;
    border-radius: 10%;
    color: #fff;
    font: bold 20px/1 “helvetica neue”, helvetica, arial, sans-serif;
    text-align: center;
    box-shadow: 0 1px 3px #fcb51cbb;
    text-shadow: 0px -1px 1px rgba(0, 0, 0, 0.8);
}
.price label{
  font-size: 18px;
}
.miaoshu{
  display: flex;
  font-size: 10px;
  line-height: 10px;
  justify-content: center;
  align-items: center;
}
.miaoshu image{
  width: 20px;
  height:20px;
}
.miaoshu view{
  color: #999;
}
.fenglei{
  display: flex;
  flex-direction: column;
  font-size: 10px;
  line-height: 10px;
  justify-content: center;
  align-items: center;
}
.fenglei image{
  width: 40px;
  height:40px;
}
.fenglei view{
  color: #999;
}

.tehuiImg{
  width: 40vw;
  height: 30vw;
  border-radius: 5px;
}
.qbfy{
   width:90vw;
   margin-left: 5vw;
}

.menu-po{
    position: relative;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}
.menu{
    background-color: #fff;
    border-bottom: 1rpx solid #e9e9e9;
}
.menu-list{
    display: flex;
    justify-content: space-between;
    height: 90rpx;
}
.menu-nav{
    width: 25%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.menu-nav image{
    width: 32rpx;
    height: 32rpx;
}
.menu-nav text{
    color: #696969;
    font-size: 14px;
}



.menu-if{
    background-color: #ffffff;
    box-sizing: border-box;
    position: absolute;
    top: 92rpx;
    left: 0;
    z-index: 9;
    width: 100%;
}
.meun-txt{
    height: auto;
    color: #696969;
}
.menu-text-list{
    position: relative;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}
.menu-text-list-left{
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
    padding-left: 35rpx;
}
/* text样式 */
.meun-city-txt{
    display: block;
    border-bottom: 1rpx solid #e9e9e9;
    width: 100%;
    padding: 25rpx 0;
    font-size: 14px;
}
.meun-city-txt-price{
    display: flex;
    justify-content:center;
}

.menu-text-list-rig{
    width: 50%;
    position: absolute;
    top: 0;
    right: 0;
    background-color: #f9f9f9;
    z-index: 10;
    box-sizing: border-box;
    padding-left: 35rpx;
}


/* over/auto */
.over-auto{
    height: 550rpx;
    overflow: auto;
}
