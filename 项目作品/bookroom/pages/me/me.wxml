<!--pages/me/me.wxml-->
<view class='amountBg' style="background:url('img/mebg.jpg');">
   <view class='img' style='z-index:999;border-radius:50%;background:#fff;'><image src='img/user.png' style='width:49px;height:47px'></image></view>
   <view class='account'>
       <view>{{username}}</view>
       <view>
       <navigator url="../personinfo/personinfo">
        账号管理  >
       </navigator>
      </view>
   </view>
   <view class='nav'></view>
</view>
<view class='content'>
   <view class='order'>
      
       <view class='desc' bindtap='kanfang'>
          <view><image src='img/icon_me/jilu.png' style='width:20px;height:25px;'></image></view>
          <view >预定记录</view>
      </view>
       <view class='desc' bindtap='yyjl'>
          <view><image src='img/icon_me/xiaoxi.png' style='width:20px;height:25px;'></image></view>
          <view >取消记录</view>
      </view>
       <view class='desc'bindtap='quanbu'>
          <view><image src='img/icon_me/quanbu-copy.png' style='width:20px;height:25px;'></image></view>
          <view >全部</view>
      </view>
   </view>
   <view class='clear'></view>
   <view class='item' bindtap='shoucang'>
     <view class='icon'><image src='img/收藏.png' style='width:22px;height:21px;'></image></view>
     <view class='itemName'>
           <view>我的收藏</view>
     </view>
     <!-- <view class='right'><text class='opr'>充值余额</text>></view> -->
   </view>
   <view class='hr'></view>
   <view class='item'>
     <view class='icon'><image src='img/邀请.png' style='width:22px;height:21px;'></image></view>
     <view class='itemName'>
           <view>邀请好友</view>
     </view>
     <view class='right' bindtap='onShareAppMessage'><text class='opr'>一起来租房</text>></view>
   </view>
   <view class='hr'></view>
   <view class='item'>
     <view class='icon'><image src='img/消息.png' style='width:22px;height:21px;'></image></view>
     <view class='itemName'>
           <view>消息中心</view>
     </view>
     <view class='right'><text class='opr'>在线服务</text>></view>
   </view>
   <view class='hr'></view>
   <view class='item'>
     <view class='icon'><image src='img/建议书.png' style='width:22px;height:21px;'></image></view>
     <view class='itemName'>
           <view>产品意见</view>
     </view>
     <view class='right'>></view>
   </view>
   <view class='hr'></view>
   <view class='item'>
     <view class='icon'><image src='img/更多.png' style='width:22px;height:21px;'></image></view>
     <view class='itemName'>
           <view>更多</view>
     </view>
     <view class='right'>></view>
   </view>
   <view class='line'></view>
   <button class='logout' bindtap='logout'>退出登录</button>
</view>


